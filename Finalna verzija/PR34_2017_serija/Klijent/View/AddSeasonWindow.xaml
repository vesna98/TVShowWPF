<Window x:Class="Klijent.View.AddSeasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klijent.View"
        mc:Ignorable="d"
        Title="AddSeasonWindow" Height="200" Width="400" Background="#2e3137">
    <Grid>
        <Label Content="Navedite broj sezone koju zelite da dodate" Foreground="White" HorizontalAlignment="Left" Height="27" Margin="72,15,0,0" VerticalAlignment="Top" Width="243"/>
        <Button Content="Add" HorizontalAlignment="Left" Command="{Binding AddNewSeasonCommand}" Background="#4CAF50" Foreground="White" Height="28" Margin="72,120,0,0" VerticalAlignment="Top" Width="243"/>
        <TextBox HorizontalAlignment="Left" Height="34" Margin="72,64,0,0" TextWrapping="Wrap" Text="{Binding Number,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="243"/>
    </Grid>
</Window>
