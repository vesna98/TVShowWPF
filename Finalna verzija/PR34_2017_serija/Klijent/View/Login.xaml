<Window x:Class="Klijent.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klijent"
        mc:Ignorable="d"
        Title="Login" Height="320" Width="300" FontSize="14" Background="#484848">
    <Border Background="#2e3137" CornerRadius="0" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Prijava" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Korisnicko ime" Foreground="White"></Label>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18" Text="{Binding Username}"></TextBox>
            <Label Content="Lozinka" Foreground="White"></Label>
            <TextBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" Text="{Binding Password}"></TextBox>
            <Button Name="btnSubmit" Content="Prijavi se" Margin="60 10" Background="#4CAF50" Foreground="White" Command="{Binding LoginCommand}"></Button>
        </StackPanel>
    </Border>
</Window>
